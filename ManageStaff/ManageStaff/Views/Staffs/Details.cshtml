@model ManageStaff.Models.Staff

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Học hàm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Academic.Name)
        </dd>

        <dt>
            Học vị
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Degree.Name)
        </dd>

        <dt>
            Bộ môn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EducationField.Name)
        </dd>

        <dt>
            Chức vụ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.Name)
        </dd>

        <dt>
            Tên đầy đủ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            Thư điện tử
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Sở thích nghiên cứu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResearchInterests)
        </dd>

        <dt>
            Ảnh
        </dt>

        <dd>
            <a href="@Url.Content(Model.ImageStaff)"><img src="@Url.Content(Model.ImageStaff)" alt="Ảnh của @Model.Name" style="max-height: 160px; max-width: 320px; border: solid 1px red;" /></a>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Code }) |
    @Html.ActionLink("Back to List", "Index")
</p>
