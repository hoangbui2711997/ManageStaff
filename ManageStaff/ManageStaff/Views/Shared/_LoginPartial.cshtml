@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item">
            @Html.ActionLink("Hello " + User.Identity.GetUserName().Replace(User.Identity.GetUserName().Substring(User.Identity.GetUserName().IndexOf('@'), User.Identity.GetUserName().Length - User.Identity.GetUserName().IndexOf('@')), "") + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        @*<li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", dataToggle="modal", dataTarget="#btn-login"})</li>*@
        <li class="nav-item"><span role="button" id="loginLink" data-toggle = "modal" data-target = "#btn-login">Login</span></li>
    </ul>
}



